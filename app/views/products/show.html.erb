<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
      <div class="col-sm-8">
      <dl class="dl-horizontal">
      <h4>Reviews</h4>
          <% @reviews.each do |review| %>
            
            <dt>User:</dt>
            <dd><%= review.user.first_name %> </dd>
            <dt>Review:</dt>
            <dd> <%= review.description %></dd>
            <dd>Rating: <%= review.rating %></dd>
            <dd><%=review.created_at.strftime("%D") %></dd>

            <% if current_user == review.user %>
           <dd>
           <%= button_to "Delete",[@product, review], :method => :delete %>
            <button type="button">Delete</button></dd>
      
            <% end %>
            <% end %>
          
            </dl>
            </div>
    </div>
    <div class="row">
    <div>
    <%= form_for :review, url: product_reviews_url(@product) do |f| %>
      <h2>New review</h2>
      <% if current_user %>
      <%= f.label :description %><br>
      <%= f.text_area :description %><br>

      <%= f.label :Rating %><br>
      <%= f.select :rating, [1,2,3,4,5], class: 'form-control' %>
      <%= f.submit("Create Review") %><br>
      <% else %>
      <h4>Please Login to Review Products</h4>
     <%end %> 
    <% end %>
</div>



  </article>

</section>
